<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.calendar.JumpActivity">

    <EditText
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/m_receiver_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:imeOptions="flagNoFullscreen|actionNone"
        android:text="jumpText" />

    <Button
        android:id="@+id/test"
        android:text="click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@+id/m_receiver_tv"
        android:id="@+id/m_installed_apk"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


</android.support.constraint.ConstraintLayout>
