<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sgm.rwutils.MainActivity">

    <EditText
        android:id="@+id/m_write_content_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="500dp"
        android:text="Picher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/m_write_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_write"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_write_content_et" />

    <Button
        android:id="@+id/m_read_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_read"
        app:layout_constraintLeft_toRightOf="@+id/m_write_bt"
        app:layout_constraintTop_toBottomOf="@+id/m_write_content_et" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_write_bt">

        <TextView
            android:id="@+id/m_content_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </ScrollView>


</android.support.constraint.ConstraintLayout>
